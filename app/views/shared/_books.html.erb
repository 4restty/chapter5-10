<div>
  <h2>Books</h2>
  <table class="table table-hover table-inverse">
    <thead>
      <tr>
        <th></th>
        <th>Title</th>
        <th>Opinion</th>
        <th colspan="3"></th>
      </tr>
    </thead>
    <tbody>
      <% books.each do |book| %>
        <tr>
          <td>
            <% if user.profile_image_id.present? %>
              <%= attachment_image_tag user, :profile_image, size: "50x50" %>
            <% else %>
              <%= image_tag "no_image.png", size: "50x50" %>
              <br>
              <%= link_to user.name, user_path(current_user.id) %>
            <% end %>
          </td>
          <td>
            <%= link_to book.title, book_path(book) %>
          </td>
          <td>
            <%= book.body %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>