<div>
  <h2>User info</h2>
  <table class="table">
    <tbody>
      <tr>
        <%= attachment_image_tag user, :profile_image, size: "100x100", fallback: "no_image.png" %>
      </tr>
      <tr>
        <th>name</th>
        <th><%= user.name %></th>
      </tr>
      <tr>
        <th>introduction</th>
        <th><%= user.introduction %></th>
      </tr>
    </tbody>
  </table>
  <div>
    <%= link_to "Edit", edit_user_path(user.id) %>
  </div>
</div>